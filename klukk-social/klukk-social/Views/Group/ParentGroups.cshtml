@using klukk_social.Models
@model GroupViewModel

<h2 class="card postpadd">Hóparnir mínir</h2>

@foreach (var group in Model.GroupList)
{
	<div class="cardgroup searchcard searchpadd">
		<a href='@Url.Action("GroupSettings", "Group", new { groupId = group.Id }, null)'>
			<img src='@group.ProfilePic' class="search" />
		</a>
		@Html.ActionLink(group.Name, "GroupSettings", "Group", new { groupId = group.Id }, new { @class = "btn btn-success btn-block whitepace" })
		@if (!group.OpenGroup)
		{
			@Html.ActionLink("Læstur hópur", "GroupSettings", "Group", new { groupId = group.Id }, new { @class = "btn btn-danger btn-block whitepace" })
		}
		else
		{
			@Html.ActionLink("Opinn hópur", "GroupSettings", "Group", new { groupId = group.Id }, new { @class = "btn btn-success btn-block whitepace" })
		}
	</div>
}