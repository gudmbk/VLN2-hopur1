@using klukk_social.Models
@model Post
<div class="cardgroup postpadd post-status">
	@using (Html.BeginForm("PostOnGroup", "Group", FormMethod.Post, new { @class = "postdialog", role = "form" }))
	{
		<textarea class="form-control span formwidth" rows="4" name="status" placeholder="Hvað viltu segja okkur?"></textarea>
		<input type="hidden" name="GroupId" value="@Model.GroupId" />
		<input type="submit" value="Deila" class="btn btn-default topmargin" />
	}
</div>