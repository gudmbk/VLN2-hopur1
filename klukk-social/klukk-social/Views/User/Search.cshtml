@using klukk_social.Models
@model SearchViewModel

@{
    ViewBag.Title = "Search";
}

<h2 class="card searchpadd">Search</h2>

@foreach (var user in Model.Users)
{
    <div class="card searchcard searchpadd">
        <a href='@Url.Action("Profile", "User", new {userId = user.User.Id}, null)'>
            <img src='@user.User.ProfilePic' class="search"/>
        </a>
        @Html.ActionLink(user.User.FirstName, "Profile", new { userId = user.User.Id }, new { @class = "btn btn-success btn-block whitepace", Title=@user.User.FullName })
		@if(user.IsFriends)
		{
			@Html.ActionLink("Vinur", "Profile", new { userId = user.User.Id }, new { @class = "btn btn-success btn-block whitepace" })
		}
		else
		{
			@Html.ActionLink("Ekki vinur", "Profile", new { userId = user.User.Id }, new { @class = "btn btn-warning btn-block whitepace" })
		}
    </div>
}
@foreach (var group in Model.Groups)
{
	<div class="cardgroup searchcard searchpadd">
		<a href='@Url.Action("Profile", "Group", new { groupId = group.Group.Id }, null)'>
			<img src='@group.Group.ProfilePic' class="search" />
		</a>
		@Html.ActionLink(group.Group.Name, "Profile", "Group", new { groupId = group.Group.Id }, new { @class = "btn btn-success btn-block whitepace" })
		@if (group.IsMember) 
		{
			@Html.ActionLink("Meðlimur", "Profile", "Group", new { groupId = group.Group.Id }, new { @class = "btn btn-success btn-block whitepace" })
		}
		else if(!group.Group.OpenGroup)
		{
			@Html.ActionLink("Læstur hópur", "Profile", "Group", new { groupId = group.Group.Id }, new { @class = "btn btn-danger btn-block whitepace" })
		}
		else
		{
			@Html.ActionLink("Opinn hópur", "Profile", "Group", new { groupId = group.Group.Id }, new { @class = "btn btn-warning btn-block whitepace" })
		}
		@*<button type="button" value="@user.Id" class="btn btn-success btn-block friend-req">Senda vinabeiðni</button>*@
	</div>
}
