@model klukk_social.Models.Post

<div class="postdialog">
	@Html.ActionLink(@Model.PosterName, "FriendHome",new {userId = Model.FromUserId})
	<p>@Model.Text</p> @*Þarf að breyta þessu í htmlText þegar búið er að gera parseföll*@
	<p>@Model.Date.ToString()</p>
</div>

@foreach (var comment in Model.Comments)
{
    <div class="commentdialog">
        @Html.ActionLink(@comment.PosterName, "FriendHome", new {userId = comment.UserId})
        <p>@comment.Body</p>
        <p>@comment.Date</p>
    </div>

}
@using (Html.BeginForm("PostComment", "Post", FormMethod.Post, new { @class = "comment-form", role = "form" }))
{
	<div class="postdialog">
		<input name="comment" />
	    <input type="hidden" name="PostId" value="@Model.Id"/>
		<input type="submit" value="Deila" class="btn btn-default" />
	</div>
}