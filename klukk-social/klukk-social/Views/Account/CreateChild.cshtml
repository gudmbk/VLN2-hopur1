@model klukk_social.Models.CreateChildViewModel
@{
    ViewBag.Title = "Hér Stofnar þú aðgang fyrir barn";
}

<h2 class="card searchpadd">@ViewBag.Title.</h2>
<div class="card postpadd">
	@using (Html.BeginForm("CreateChild", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
	{
		@Html.AntiForgeryToken()
		<h4 class="card searchpadd">Fylltu inn í reitina, upplýsingarnar um barnið.</h4>
		<div class="card postpadd">
			@Html.ValidationSummary("", new { @class = "text-danger" })
			<div class="form-group">
				@Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
				<div class="col-md-10">
					@Html.TextBoxFor(m => m.UserName, new { @class = "form-control fullwidth" })
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.First, new { @class = "col-md-2 control-label" })
				<div class="col-md-10">
					@Html.TextBoxFor(m => m.First, new { @class = "form-control fullwidth" })
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Middle, new { @class = "col-md-2 control-label" })
				<div class="col-md-10">
					@Html.TextBoxFor(m => m.Middle, new { @class = "form-control fullwidth" })
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Last, new { @class = "col-md-2 control-label" })
				<div class="col-md-10">
					@Html.TextBoxFor(m => m.Last, new { @class = "form-control fullwidth" })
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
				<div class="col-md-10">
					@Html.PasswordFor(m => m.Password, new { @class = "form-control fullwidth" })
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
				<div class="col-md-10">
					@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control fullwidth" })
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.BirthDay, new { @class = "col-md-2 control-label" })
				<div class="col-md-10">
					@Html.TextBoxFor(m => m.BirthDay, new { @class = "form-control fullwidth", type = "date" })
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" class="btn btn-default" value="Stofna barn" />
				</div>
			</div>
		</div>
	}
</div>
	@section Scripts {
		@Scripts.Render("~/bundles/jqueryval")
	}
