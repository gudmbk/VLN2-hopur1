@model klukk_social.Models.User

<div class="sidebar">
    <img src="@Model.ProfilePic" alt="Alternate Text"/>
    @*Ætti að vera hnappur too late too sleepy to finish kv Gauj p.s ætti að fara á feed eins og gerir hér*@
    @Html.ActionLink(@Model.FullName, "ParentHome", "User", new { userId = Model.Id }, new { @class = "btn btn-default btn-lg btn-block whitepace" })

    <button onclick="location.href = '@Url.Action("ParentSettings", "User")'" class="btn btn-default btn-lg btn-block">
        <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Stillingar
    </button>
    

    @foreach (var child in @ViewBag.Children)
    {
        <button onclick="location.href = '@Url.Action("Login", "Account", new { userId = child.Id })'" class="btn btn-default btn-lg btn-block">
            <span class="glyphicon glyphicon-girl" aria-hidden="true"></span> @child.FirstName
        </button>
    }
	<button onclick="location.href='@Url.Action("CreateChild", "User")'" class="btn btn-default btn-lg btn-block">
		<span class="glyphicon glyphicon-user" aria-hidden="true"></span> Nýtt barn
	</button>

	<button onclick="location.href='@Url.Action("CreateGroup", "Group")'" class="btn btn-default btn-lg btn-block">
		<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Stofna hóp
	</button>

    <button onclick="location.href = '@Url.Action("ParentGroups", "Group")'" class="btn btn-default btn-lg btn-block">
        <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Mínir hópar
    </button>

    <button onclick="location.href='@Url.Action("Reports", "User")'" class="btn btn-default btn-lg btn-block">
        <span class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span> Tilkynningar
    </button>
</div>
